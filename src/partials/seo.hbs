<link
  rel="canonical"
  href="https://www.about-tomorrow.de/{{social-url-path}}"
/>

<meta
  name="description"
  {{#if social-desc }}
    content="{{social-desc}}"
  {{/if}}
/>

{{!-- og --}}
<meta property="og:type" content="website"/>
<meta
  property="og:url"
  {{#if social-url-path }}
    content="https://www.about-tomorrow.de/{{social-url-path}}"
  {{else}}
    content="https://www.about-tomorrow.de/"
  {{/if}}
/>
<meta
  property="og:image"
  {{#if social-image-path }}
    content="https://www.about-tomorrow.de/{{social-image-path}}"
  {{else}}
    content="https://www.about-tomorrow.de/images/social.jpg"
  {{/if}}
/>
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta
  property="og:title"
  {{#if social-title }}
    content="about tomorrow | {{social-title}}"
  {{else}}
    content="about tomorrow"
  {{/if}}
/>
<meta
  property="og:description"
  {{#if social-desc }}
    content="{{social-desc}}"
  {{/if}}
/>

{{!-- twitter --}}
<meta name="twitter:card" content="summary"/>
<meta name="twitter:site" content="https://www.twitter.com/"/>
<meta
  name="twitter:title"
  {{#if social-title }}
    content="about tomorrow | {{social-title}}"
  {{else}}
    content="about tomorrow"
  {{/if}}
/>
<meta
  name="twitter:description"
  {{#if social-desc }}
    content="{{social-desc}}"
  {{/if}}
/>
<meta
  name="twitter:domain"
  {{#if social-url-path }}
    content="https://www.about-tomorrow.de/{{social-url-path}}"
  {{else}}
    content="https://www.about-tomorrow.de/"
  {{/if}}
/>
